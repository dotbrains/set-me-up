#!/bin/bash

BIN_NAME=$(basename "$0")
COMMAND_NAME=$1
SUB_COMMAND_NAME=$2

SMU_PATH="$HOME"/set-me-up

help () {
  echo "Usage: $BIN_NAME <command>"
  echo
  echo "Commands:"
  echo "   clean            Clean up caches (brew, nvm, gem)"
  echo "   edit             Open dotfiles in visual-studio-code"
  echo "   macos            Apply macOS system defaults"
  echo "   update           Update packages and pkg managers (OS, brew, npm, gem, etc)"
  echo "   help             This help message"
}

edit() {
	command -v "code" && \
  		sh -c "code $SMU_PATH"
}

update() {
  [ -d "$SMU_PATH" ] && \
	"$SMU_PATH"/smu -p -m macosupdate --no-base
}

clean() {
	command -v "brew" && \
		brew cleanup

	command -v "gem" && \
		gem cleanup

	command -v "nvm" && \
		. "$NVM_DIR/nvm.sh"; nvm cache clear
}

macos() {
  [ -d "$SMU_PATH" ] && \
	"$SMU_PATH"/smu -p -m preferences --no-base
}

case "$COMMAND_NAME" in
  "" | "-h" | "--help")
    help
    ;;
  *)
    shift
    "${COMMAND_NAME}" $@
    if [ $? = 127 ]; then
      echo "'$COMMAND_NAME' is not a known command." >&2
      help
      exit 1
    fi
    ;;
esac
